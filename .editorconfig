# top-most EditorConfig file
root = true

# all files
[*]
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

# frontend files
[*.{js, ts, jsx, tsx, vue, htm, html, css, scss, sass, styl}]
indent_style = space
indent_size = 2

# go files
[*.go]
indent_style = tab
indent_size = 4
